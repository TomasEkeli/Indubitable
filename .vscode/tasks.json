{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/cli/cli.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/cli/cli.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/cli/cli.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch test",
            "command": "dotnet",
            "type": "process",
            "isTestCommand": true,
            "options": {
                "cwd": "${workspaceFolder}/tests/lib/dotnet.tests",
                "env": {
                    "DOTNET_CLI_TELEMETRY_OPTOUT": "1"
                }
            },
            "args": [
                "watch",
                "test",
                "/p:OutDir=../testrun",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=lcov",
                "/p:CoverletOutput=../TestResults/coverage.lcov.info"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}